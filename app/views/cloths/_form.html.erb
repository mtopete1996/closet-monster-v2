<%= form_with model: cloth, class: "row" do |f| %>
  <div class="form-group col-md-3 mb-2">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", value: cloth.name %>
  </div>

  <div class="form-group col-md-3 mt-md-4 mb-3 mb-md-0">
    <%= f.submit "Create Cloth", class: "btn btn-success" %>
  </div>
<% end %>
