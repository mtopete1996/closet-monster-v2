<%= form_with model: cloth, class: "row" do |f| %>
  <% if cloth.errors.present? %>
    <div class="row">
      <div class="alert alert-danger col-12 col-md-5">
        <p> Errors </p>
        <ul>
          <% cloth.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group col-12 col-md-3 mb-2 p-0">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", value: cloth.name %>
  </div>

  <div class="form-group col-12 col-md-3 mb-2 p-0">
    <%= f.label :last_time %>
    <%= f.date_select :last_time, class: "form-control", value: cloth.last_time %>
  </div>

  <div class="form-group col-12 col-md-3 mt-md-4 mb-3 mb-md-0">
    <%= f.submit "Create Cloth", class: "btn btn-success" %>
  </div>
<% end %>
